{
  "name": "BDPTI-Dashboard",
  "version": "1.1.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "desktop": "electron main.js",
    "build:win": "electron-builder build --win portable --x64"
  },
  "build": {
    "appId": "com.bdpti.dashboard",
    "productName": "BDPTI Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "server/**/*",
      "web/**/*",
      "main.js",
      "package.json"
    ],
    "asarUnpack": [
      "server/**/*",
      "web/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "web/icon.ico"
    },
    "extraResources": [
      {
        "from": "./settings.json",
        "to": "./settings.json"
      }
    ]
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^25.1.7"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "ws": "^8.14.2",
    "xhr2": "^0.2.1",
    "centrifuge": "^2.8.4"
  }
}